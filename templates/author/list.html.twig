{% extends 'base.html.twig' %}

{% block title %}Hello showService!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des auteurs</h1>

    {% if authors is empty %}
        <h1>Aucun auteur trouv√©.</h1>
    {% else %}
        <ul>
            {% for authors in authors %}
                <li>
                    ID: {{ authors.id }} |
                    Username: {{ authors.username }} |
                    Email: {{ authors.email }} |
                    Nombre de livres: {{ authors.nb_books}}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    <h1>Liste de nom des auteurs</h1>
        <ul>
            {% for authors in authors %}
                <li>
                    nom: {{ authors.username |split(' ')|last|upper }}   <a href="{{url('authorDetailes',{'id': authors.id})}}">details</a>
                </li>
            {% endfor %}
        </ul>
        <h1>Liste des nb des auteurs</h1>
        <ul>
                <li>
                    nb des auteurs: {{ authors |length}}
                </li>
        </ul>
        <h1>Liste des nb livres des auteurs</h1>
        {% set tot=0 %}
        <ul>
             {% for authors in authors %}
                {% set tot=tot+authors.nb_books %}
            {% endfor %}
            <li>nb livres des auteurs: {{tot}}</li>
        </ul>
        
</div>
{% endblock %}
