{% extends 'base.html.twig' %}

{% block title %}Hello showService!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>detail de l'auteur avec l' id : {{ id }}! âœ…</h1>
    <div>
        <table>
            <thead>    
                <tr>
                    <th>id</th>
                    <th>username</th>
                    <th>email</th>
                    <th>images</th>
                    <th>nb_books</th>
                </tr>
            </thead>
            <tbody>
                {% for authors in authors %}
                    {% if authors.id == id %}
                        <tr>
                            <td>{{authors.id}}</td>
                            <td>{{authors.username}}</td>
                            <td>{{authors.email}}</td>
                            <td><img src="{{ authors.picture }}" alt="{{ authors.username }}" width="50"></td>
                            <td>{{authors.nb_books}}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
         <a href="{{ url('app_author') }}">go home</a>
    </div>
</div>
{% endblock %}
